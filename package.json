{
  "name": "sbom-azure-devops",
  "version": "1.0.15",
  "description": "SBOM Tool Azure DevOps Extension",
  "scripts": {
    "postinstall": "npm --prefix task install && npm --prefix ui install",
    "format": "prettier --write '**/*.{ts,tsx,scss,json,yaml,yml,md,html}'",
    "format:check": "prettier --check '**/*.{ts,tsx,scss,json,yaml,yml,md,html}'",
    "build": "npm run build:task && npm run build:ui",
    "build:task": "tsc -p task",
    "build:ui": "tsc -p ui",
    "package": "npx tfx-cli extension create --manifests vss-extension.json --output-path dist",
    "publish": "npx tfx-cli extension publish --manifests vss-extension.json --vsix dist/*.vsix"
  },
  "keywords": [
    "azure",
    "devops",
    "sbom",
    "sbom-tool",
    "spdx",
    "software bill of materials",
    "supply chain",
    "inventory",
    "component",
    "package",
    "security",
    "advisory",
    "vulnerability",
    "license",
    "compliance",
    "risk",
    "report",
    "graph"
  ],
  "author": "Rhys Koedijk",
  "license": "MIT",
  "homepage": "https://github.com/rhyskoedijk/sbom-azure-devops#readme",
  "bugs": {
    "url": "https://github.com/rhyskoedijk/sbom-azure-devops/issues"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.9",
    "@types/node": "^22.8.7",
    "@types/q": "^1.5.8",
    "husky": "^9.1.6",
    "prettier": "3.3.3",
    "prettier-plugin-organize-imports": "4.1.0",
    "pretty-quick": "^4.0.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged && codespell"
    }
  }
}
